@page
@model PriceQuotationApp.Pages.IndexModel
@{
    ViewData["Title"] = "Price Quotation";
}

<div class="price-quotation-container">
    <h1>Price Quotation</h1>
    
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <form method="post">
        <div class="form-group">
            <label for="Subtotal">Subtotal:</label>
            <input asp-for="PriceQuotation.Subtotal" class="form-control" id="Subtotal" />
            <span asp-validation-for="PriceQuotation.Subtotal" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label for="DiscountPercent">Discount percent:</label>
            <input asp-for="PriceQuotation.DiscountPercent" class="form-control" id="DiscountPercent" />
            <span asp-validation-for="PriceQuotation.DiscountPercent" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label for="DiscountAmount">Discount amount:</label>
            <input value="@Model.PriceQuotation.DiscountAmount.ToString("C")" class="form-control" id="DiscountAmount" readonly />
        </div>
        
        <div class="form-group">
            <label for="Total">Total:</label>
            <input value="@Model.PriceQuotation.Total.ToString("C")" class="form-control" id="Total" readonly />
        </div>
        
        <div class="button-group">
            <button type="submit" name="action" value="calculate" class="btn btn-primary">Calculate</button>
            <button type="submit" name="action" value="clear" class="btn btn-secondary">Clear</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}